// Page where can sign in go to create a new account or continue without an account.
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sign In
  link(rel='stylesheet' href='../css/general.css')
  link(rel='stylesheet' href='../css/signIn.css')
header
  image#logo(src='../images/logo.png')
#videoContainer
  iframe(src='https://www.youtube.com/embed/0Tgzc6cqkEQ')
#loginContainer
  form#login
    label(for='emailEntry') Email:
    input#emailEntry(type='text' placeholder='Email')
    label(for='passwordEntry') Password:
    input#passwordEntry(type='password' placeholder='Password')
    input(type='submit' value='Login')
  a(href='/signUp') create new account
  a(href='/home') continue without an account
  // script src to be changed to log on .js file
  script(src='../js/signIn.js')
