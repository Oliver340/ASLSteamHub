// Page where you would log on (loads dynamically).
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  title Sign In
  link(rel='stylesheet' href='../css/general.css')
  link(rel='stylesheet' href='../css/signIn.css')
header
  image#logo(src='../images/logo.png')
img(src='../images/videoexample.png' style='width: 50%;margin-left: 25%;margin-top: 2%;')
#loginContainer
  form#login
    label#emailEntry Email:
    input#emailEntry(type='text' placeholder='Email')
    label#passwordEntry Password:
    input#passwordEntry(type='text' placeholder='Password')
    // onClick to be changed to logOn() function
    button(type='button' onclick='signIn()') Log on
  a(href='http://localhost:32535/signup') create new account
// script src to be changed to log on .js file
script(src='../js/signIn.js')
